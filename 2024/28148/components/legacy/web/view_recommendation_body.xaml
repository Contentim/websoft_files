%>
		<GridRow>
			<Label Class="XAML-info-grid-title-column"><%=tools_web.get_web_const( "c_resume", curLngWeb )%><%=(ArrayOptFind(arrRecommendationRequiredFields,"This=='desc'")!=undefined?"*":"")%>:</Label>
			<EditBox Name="desc" Width="100%" Height="150"> </EditBox>
